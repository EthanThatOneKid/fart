type Pokeball {
  id*: string
  odds*: number
  used*: boolean

  throw*: fn % <string, async % boolean>
}

type Pokemon {
  name*: string
  ball: Pokeball
  types*: { type1*: string
            type2:  string }
  
  catch*: fn % <Pokeball, async % boolean>
}

type Bag {
  balls*: array % Pokeball
}

type PC {
  mons*: array % Pokemon
}

