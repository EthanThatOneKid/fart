type Pokeball {
  id*: string
  used*: boolean

  throw*: fn % <string, async % boolean>
}

type Pokemon {
  name*: string
  ball: Pokeball
  types*: { type1*: string
            type2:  string }
  
  obtain*: fn % <Pokeball, async % boolean>
}

type Bag {
  balls*: array % Pokeball
}

type PC {
  mons*: array % Pokemon
}